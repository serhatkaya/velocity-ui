{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "velocity-ui": {
      "projectType": "library",
      "root": "projects/velocity-ui",
      "sourceRoot": "projects/velocity-ui/src",
      "prefix": "vui",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/velocity-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/velocity-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/velocity-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/velocity-ui/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "velocity-demo": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/velocity-demo",
      "sourceRoot": "projects/velocity-demo/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/velocity-demo",
            "index": "projects/velocity-demo/src/index.html",
            "main": "projects/velocity-demo/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/velocity-demo/tsconfig.app.json",
            "assets": [
              "projects/velocity-demo/src/favicon.ico",
              "projects/velocity-demo/src/assets"
            ],
            "styles": [
              "projects/velocity-demo/src/styles.scss",
              "node_modules/velocity-ui/styles/main.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "velocity-demo:build:production"
            },
            "development": {
              "browserTarget": "velocity-demo:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "velocity-demo:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/velocity-demo/tsconfig.spec.json",
            "assets": [
              "projects/velocity-demo/src/favicon.ico",
              "projects/velocity-demo/src/assets"
            ],
            "styles": ["projects/velocity-demo/src/styles.scss"],
            "scripts": []
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
